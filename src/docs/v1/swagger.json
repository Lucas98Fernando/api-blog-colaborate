{
  "openapi": "3.0.0",
  "info": {
    "title": "API Rest Blog Colaborate",
    "version": "1.0.0",
    "description": "Essa API Rest foi desenvolvida utilizando Node.js, Express, Sequelize ORM e PostgreSQL, a mesma tem como funcionalidades o cadastro, login e autenticação de usuários através do JWT (JSON Web Token), assim também como um CRUD (Create, Read, Update e Delete) de posts e categorias.",
    "contact": {
      "name": "API Rest Blog Colaborate",
      "email": "lucas98fernando@gmail.com",
      "url": "https://github.com/Lucas98Fernando/api-blog-colaborate"
    },
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "servers": [
    {
      "url": "http://localhost:5000/",
      "description": "API para testes e desenvolvimento"
    },
    {
      "url": "https://www.urldeproducao.com.br",
      "description": "API de produção"
    }
  ],
  "paths": {
    "/auth/register": {
      "post": {
        "sumary": "Users regitration",
        "description": "This route will be responsible for registering users.",
        "tags": ["Auth"],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Register"
              },
              "examples": {
                "register": {
                  "value": {
                    "name": "Lucas Fernando",
                    "email": "lucasdev@gmail.com",
                    "password": "123456"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "400": {
            "description": "User already exists!"
          },
          "201": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/Register"
                }
              }
            }
          }
        }
      }
    },
    "/auth/login": {
      "post": {
        "sumary": "Users login",
        "description": "This route will be responsible for logging in users.",
        "tags": ["Auth"],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Login"
              },
              "examples": {
                "login": {
                  "value": {
                    "email": "lucasdev@gmail.com",
                    "password": "123456"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "400": {
            "description": "User not found!"
          },
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/Login"
                }
              }
            }
          }
        }
      }
    },
    "/post/getAll": {
      "get": {
        "sumary": "Get all posts",
        "description": "This route is responsible for listing all posts",
        "tags": ["Post"],
        "responses": {
          "400": {
            "description": "Posts not found!"
          },
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "string",
                    "$ref": "#/components/schemas/Posts"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Register": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string"
          }
        }
      },
      "Login": {
        "type": "object",
        "properties": {
          "user": {
            "type": "object",
            "properties": {
              "idUserType": { "type": "number" },
              "name": { "type": "string" },
              "email": { "type": "string" }
            }
          },
          "token": {
            "type": "string"
          }
        }
      },
      "Posts": {
        "type": "object",
        "properties": {
          "id": { "type": "number" },
          "idAuthor": { "type": "number" },
          "idCategory": { "type": "number" },
          "status": { "type": "number" },
          "title": { "type": "string" },
          "description": { "type": "string" },
          "slug": { "type": "string" }
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
